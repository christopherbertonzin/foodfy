{% extends 'layout.njk' %}

{% block content %}

    <main class="content">

        {# banner #}
        <section class="receipe--title">
            <div>
                <img src="./img/{{item.image}}">
            </div>
            <h1 class="t--extra--large">{{item.title}}</h1>
            <p class="t--medium t--subtitle">{{item.author}}</p>
        </section>

        {# content #}
        <section class="recipe">

            <h1 class="t--large">Ingredientes <a id="btn--display" >MOSTRAR</a></h1>
            <div class="recipe--content">
                {% for i in item.ingredients %}
                    <ul>
                        <li class="t--small t--paragraph">{{i}}</li>
                    </ul>
                {% endfor %}
            </div>

            <h1 class="t--large">Modo de preparo <a href="" id="btn--display" >MOSTRAR</a></h1>
            <div class="recipe--content">
                {% for i in item.preparation %}
                     <ul>
                         <li class="t--small t--paragraph">{{i}}</li>
                     </ul>
                {% endfor %}  
            </div>

            <h1 class="t--large">Informações adicionais <a href="" id="btn--display" >MOSTRAR</a></h1>
            <div class="recipe--content">
                <p class="t--small t--paragraph">{{item.information}}</p>
            </div>
        </section>
    </main>
    <script src="./js/scripts.js"></script>
    
{% endblock %}